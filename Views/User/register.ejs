<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.0/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.0/dist/sweetalert2.all.min.js"></script>
</head>
<body>

    <section class="vh-100">
        <div class="container py-5 h-100">
          <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                class="img-fluid" alt="Phone image">
            </div>
       
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        
                <form method="post" action="/register" id="registrationForm" onsubmit="return validateForm()">
                   <h1>REGISTER</h1>
                    <!-- Name input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="name" name="name" class="form-control form-control-lg" />
                        <label class="form-label" for="name">User name</label>
                        <div id="nameError" class="text-danger"></div>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" name="email" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Email address</label>
                        <div id="emailError" class="text-danger"></div>
                    </div>
                    <!-- Phone input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="phone" name="phone" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Phone number</label>
                        <div id="phoneError" class="text-danger"></div>
                    </div>
                    <!-- Profession input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="profession" name="profession" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Profession</label>
                        <div id="professionError" class="text-danger"></div>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="password" name="password" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">Password</label>
                        <div id="passwordError" class="text-danger"></div>
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="adminRadio" value="admin">
                            <label class="form-check-label" for="adminRadio">I'm admin</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="userRadio" value="user" checked>
                            <label class="form-check-label" for="userRadio">I'm user</label>
                        </div>
                        <a href="/login">Login?</a>
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                </form>
            </div>
          </div>
        </div>
      </section>
    
    
</body>


<script>
    function validateForm() {
        clearErrorMessages();
        
        var name = document.getElementById('name').value;
        var email = document.getElementById('email').value;
        var phone = document.getElementById('phone').value;
        var profession = document.getElementById('profession').value;
        var password = document.getElementById('password').value;

        document.getElementById('nameError').innerText = validateName(name);
        document.getElementById('emailError').innerText = validateEmail(email);
        document.getElementById('phoneError').innerText = validatePhone(phone);
        document.getElementById('professionError').innerText = validateProfession(profession);
        document.getElementById('passwordError').innerText = validatePassword(password);

        return (
            validateName(name) === '' &&
            validateEmail(email) === '' &&
            validatePhone(phone) === '' &&
            validateProfession(profession) === '' &&
            validatePassword(password) === ''
        );
    }

    function validateName(name) {
        return name.trim() === '' ? 'Name is required' : '';
    }

    function validateEmail(email) {
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email) ? '' : 'Invalid email address';
    }

    function validatePhone(phone) {
        var phoneRegex = /^\d{10}$/;
        return phoneRegex.test(phone) ? '' : 'Invalid phone number';
    }

    function validateProfession(profession) {
        return profession.trim() === '' ? 'Profession is required' : '';
    }

    function validatePassword(password) {
        return password.length < 6 ? 'Password must be at least 6 characters long' : '';
    }

    function clearErrorMessages() {
        document.getElementById('nameError').innerText = '';
        document.getElementById('emailError').innerText = '';
        document.getElementById('phoneError').innerText = '';
        document.getElementById('professionError').innerText = '';
        document.getElementById('passwordError').innerText = '';
    }
</script>




