    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '<%= failure %>!',
        });
    </script>
<% } %>

  
  <%if( typeof success!=='undefined' && success!=null){%>
    <script>
      Swal.fire({
    icon: 'success',
    title: 'Success!!',
    text: '<%=success%>!',
  })
  
  </script>
  <%}%>
  
